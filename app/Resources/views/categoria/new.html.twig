    {% extends '@Admin/base.html.twig' %}
{% block navegacion %}
{{ include('@Admin/partials/navegacion.html.twig',{'menu':'Raloy Lubricantes','submenu':'Categoria'}) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('admin/plugins/bower_components/colorpicker/colorpicker.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('admin/js/jasny-bootstrap.js') }}"></script>
    <script src="{{ asset('admin/plugins/bower_components/colorpicker/bootstrap-colorpicker.js') }}"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.colorpicker').colorpicker({
                format: 'rgb'
            });
        });
    </script>
{% endblock %}
{% block body %}

    <div class="row">
        <div class="col-md-12">
                <div class="white-box">
                    <h3 class="box-title m-b-0">Nuevo Registro</h3>                    {% form_theme form '@Admin/form/innology_bootstrap_3_horizontal_layout.html.twig' %}
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    <div class="form-group m-b-0">
                        <div class="col-sm-12">
                                                                    <a class="btn btn-inverse waves-effect waves-light m-t-10" style="float:left; margin:5px;" href="{{ path('categoria_index') }}">Regresar</a><button type="submit" class="btn btn-success waves-effect waves-light m-t-10" style="float:left;  margin:5px;" >Guardar</button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
        </div>
    </div>

{% endblock %}
