    {% extends '@Admin/base.html.twig' %}
{% block navegacion %}
{{ include('@Admin/partials/navegacion.html.twig',{'menu':'Raloy Lubricantes','submenu':'Administradores'}) }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('admin/plugins/bower_components/datatables/jquery.dataTables.min.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('admin/plugins/bower_components/datatables/jquery.dataTables.min.js') }}"></script><script>
    $(document).ready(function(){
        $('#myTable').DataTable();
    });
    </script>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-sm-12">
            <div class="white-box">
                <h3 class="box-title m-b-0">Administradores</h3>
               {#<p class="text-muted m-b-30">{{ Administradores</p>#}
                <table id="myTable" class="table table-striped">
                    <thead>
                    <tr>
                        <th>No.</th>                            <th>Id</th>                            <th>Nombre</th>                            <th>Apellidos</th>                            <th>Email</th>                            <th>Telefono</th>                            <th>Password</th>                            <th>Salt</th>                            <th>Activo</th>                            <th>Verificado</th>                            <th>Created_at</th>                            <th>Updated_at</th>                        <th>Opciones</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% set i = 1 %}
                    {% for administradore in administradores %}
                    <tr>
                        <td>{{ i }}</td>                                <td><a href="{{ path('administradores_show', { 'id': administradore.id }) }}">{{ administradore.id }}</a></td>                                <td>{{ administradore.nombre }}</td>                                <td>{{ administradore.apellidos }}</td>                                <td>{{ administradore.email }}</td>                                <td>{{ administradore.telefono }}</td>                                <td>{{ administradore.password }}</td>                                <td>{{ administradore.salt }}</td>                                <td>{% if administradore.activo %}Sí{% else %}No{% endif %}</td>                                <td>{% if administradore.verificado %}Sí{% else %}No{% endif %}</td>                                <td>{% if administradore.createdat %}{{ administradore.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>                                <td>{% if administradore.updatedat %}{{ administradore.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>                                <td>
                                    <div class="btn-group btn-group-xs">
                                        <a href="{{ path('administradores_show', { 'id': administradore.id }) }}" data-toggle="tooltip" title="Ver" class="btn btn-default"><i class="fa fa-list-ul"></i></a>
                                        <a href="{{ path('administradores_edit', { 'id': administradore.id }) }}" data-toggle="tooltip" title="Editar" class="btn btn-default"><i class="fa fa-edit"></i></a>
                                    </div>
                                </td>
                    </tr>
                    {% set i=i+1 %}
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    {% endblock %}
