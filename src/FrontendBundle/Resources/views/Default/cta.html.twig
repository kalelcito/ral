{% extends '@Frontend/layout.html.twig' %}

{% block opengraph %}
    <meta property="og:type" content="article" />
    <meta property="og:title" content="Centro de Tecnología Aplicada | Raloy Lubricantes" />
    <meta property="og:description" content="Nuestro laboratorio está aprobado por la Entidad Mexicana de Acreditación
    (EMA), es aquí donde implementamos más de 100 pruebas estandarizadas internacionalmente,  que cumplen con las normas
     American Society For Testing And Materials (ASTM), las cuales son  las más importantes para el control en el
     proceso y liberación de lubricantes automotrices e industriales, esto lo logramos hacer con equipo de última tecnología."/>
    <meta property="og:image" content="{{ asset('assets/images/logo.png') }}" />
{% endblock %}

