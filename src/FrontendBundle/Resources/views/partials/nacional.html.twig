<div class="col-sm-3">
    <h4>Norte</h4>
    {% for nacional in nacionales %}
        {% if nacional.zona=='Norte' %}
            <li role="presentation" class="li-nopad"><a href="{{ path('maps',{"slug":nacional.slug}) }}">{{ nacional.nombre }}</a></li>
        {% endif %}
    {% endfor %}
</div>
